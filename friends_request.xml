<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="1dp"
    android:paddingTop="16dp"
    android:background="#502020"
    tools:context=".MainActivity" >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="650dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="#bf9000"
        android:textSize="15dp"
        android:text="Back" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="Friends List"
        android:textColor="#bf9000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:background="#bf9000"
        android:textSize="15dp"
        android:text="Log Out" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-650dp"
        android:layout_marginBottom="615dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMap"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginRight="45dp"
            android:background="#bf9000"
            android:textSize="15dp"
            android:text="Map" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:background="#bf9000"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Profile" />

        <Button
            android:id="@+id/btnSetting"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="95dp"
            android:background="#bf9000"
            android:textSize="12dp"
            android:text="Settings" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-580dp"
        android:layout_marginBottom="540dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchFriends"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#bf9000"
            android:text="Search Friends"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-535dp"
        android:gravity="center"
        android:text="You have numFriends friends, numFriendsOnline are online right now"
        android:textColor="#bf9000"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-50dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnChangeImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/FriendsList"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="72dp"
            android:text="Friend1"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnOptions"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:background="#bf9000"
            android:textSize="12dp"
            android:text="Options" />

    </LinearLayout>

</LinearLayout>

