<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="1dp"
    android:paddingTop="16dp"
    android:background="#502020"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginBottom="650dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="#bf9000"
            android:text="Back"
            android:textSize="15dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Admin Dash"
            android:textColor="#bf9000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:background="#bf9000"
            android:text="Log Out"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ChangeImg"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="-600dp" />

    <TextView
        android:id="@+id/setName"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Name Name"
        android:textColor="#bf9000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/setLocation"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Location: Somewhere"
        android:textColor="#bf9000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-125dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFriends"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginRight="45dp"
            android:background="#bf9000"
            android:text="Friends"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bf9000"
            android:text="Add Friend"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnDeleteFriend"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="#bf9000"
            android:text="Remove Friend"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-7dp"
            android:background="#bf9000"
            android:text="Settings"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="-125dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDeleteUser"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginRight="45dp"
            android:background="#bf9000"
            android:text="Delete User"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnUpdateUser"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bf9000"
            android:text="Update User"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnGetAllUser"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="#bf9000"
            android:text="Get All Users"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnGetCount"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-7dp"
            android:background="#bf9000"
            android:text="Number of Users"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/allUser"
        android:scrollbars = "vertical"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Default"
        android:textColor="#bf9000"
        android:textSize="20dp" />

</LinearLayout>